<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_dialog_background"
    android:paddingVertical="@dimen/_20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_below="@id/mainLayout"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="@dimen/space70"
                android:layout_height="@dimen/space70"
                android:src="@drawable/beauty_background_mosaicing"
                app:civ_border_width="3dp"
                app:civ_border_color="@color/app_color2"/>
            <TextView
                android:id="@+id/txt_username"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Raj kumar"
                style="@style/HeaderTextStyle"/>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_uid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID:1000002"
                    style="@style/SmallTextStyle"/>


            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:text="Lv1"
                    android:gravity="center"
                    android:paddingHorizontal="6dp"
                    android:background="@drawable/level_bg"
                    style="@style/SmallTextStyle"/>

                <View
                    android:layout_marginHorizontal="6dp"
                    android:layout_width="1dp"
                    android:layout_height="8dp"
                    android:background="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:text="0"
                    android:gravity="center"
                    android:drawablePadding="2dp"
                    android:drawableLeft="@drawable/ic_baseline_favorite_24"
                    android:paddingHorizontal="4dp"
                    android:background="@drawable/level_bg_1"
                    style="@style/SmallTextStyle"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_10dp"
            android:layout_marginTop="@dimen/_10dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kick out"
                android:textColor="@color/white"
                android:backgroundTint="@color/bottom_btn_background"/>

            <com.google.android.material.button.MaterialButton
                android:layout_marginHorizontal="@dimen/_10dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set as Admin"
                android:textColor="@color/black"
                app:rippleColor="@color/light_gray"
                style="@style/Widget.Material3.Button.ElevatedButton"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+Following"
                android:textColor="@color/white"
                android:backgroundTint="@color/btn_email"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
